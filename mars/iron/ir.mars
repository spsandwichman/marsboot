module fe;

def Type = enum u8 {
    Void,

    Bool,
    I8,
    I16,
    I32,
    I64,

    F16,
    F32,
    F64,

    Ptr,
};

def InstKind = enum u16 {
    Invalid,

    Bookend,
    Nop,

    IConst,
    
    IAdd,
    ISub,
    IMul,
    IDiv,
    IMod,

    UAdd,
    USub,
    UMul,
    UDiv,
    UMod,

    ShiftLeft,
    ShiftRight,
    And,
    Or,
    Xor,

    Not,
};

def Inst = struct {
    kind: InstKind,
    next, prev: ^mut Inst,
};

def InstBinop = struct {
    base: Inst,
    lhs, rhs: ^mut Inst,
};

fun to_binop(i: ^mut Inst): ^mut InstBinop { 
    return cast(^mut InstBinop) i; 
}